package com.team6.ecommercebackend.entities;

import java.util.List;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.JoinColumn;
import javax.persistence.OneToMany;
import javax.persistence.Table;

@Entity
@Table(name="orders")
public class Orders {
	
	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	@Column(name = "orders_id")
	private Long id;
	
//	@Column(name = "order_details_id", nullable=false)
//	private Long orderDetailsId;
//	
//	@Column(name = "product_id", nullable=false)
//	private Long productId;
	
	@Column(name = "order_details_id", nullable=false)
	@OneToMany(mappedBy="orders")
	private List<OrderDetails> orderDetailsList;
	
	@Column(name = "product_id", nullable=false)
	@OneToMany(mappedBy="orders")
	private List<Products> productList;
	
	@Column(name = "quantity", nullable=false)
	private Integer quantity;
	
	
	//Has a one to many realtionship with order details
//	@OneToMany
//	List<OrderDetails> orderDetailsList;
	//Has a one to many realtionship with order details
//	@OneToMany
//	List<Products> productList;
	

	
	
	

	public Orders() {
		super();
	}


	public Long getId() {
		return id;
	}

	public void setId(Long id) {
		this.id = id;
	}

	public Integer getQuantity() {
		return quantity;
	}

	public void setQuantity(Integer quantity) {
		this.quantity = quantity;
	}

	@Override
	public String toString() {
		return "Orders [id=" + id + ", orderDetailsId=" + orderDetailsId + ", productId=" + productId + ", quantity="
				+ quantity + "]";
	}

	

	

	
	
}
